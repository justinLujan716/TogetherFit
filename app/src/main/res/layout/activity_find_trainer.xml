<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_find_trainer"
    android:background="@drawable/backgroundsec"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.heem.togetherfit.FindTrainer">


    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/footer"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/zSearchBtn"
        android:background="#AFD3DF"
        android:onClick="ButtonOnClick"
        android:visibility="invisible"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/workoutDropdownBtn"
        android:layout_alignLeft="@+id/ZipInput"
        android:layout_alignStart="@+id/ZipInput"
        android:layout_alignRight="@+id/ZipInput"
        android:layout_alignEnd="@+id/ZipInput" />

    <Button
        android:text="Search"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wtSearchBtn"
        android:background="#AFD3DF"
        android:onClick="ButtonOnClick"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/workoutDropdownBtn"
        android:layout_alignLeft="@+id/ZipInput"
        android:layout_alignStart="@+id/ZipInput"
        android:layout_alignRight="@+id/ZipInput"
        android:layout_alignEnd="@+id/ZipInput" />

    <TextView
        android:text="Find a Trainer by..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:fontFamily="sans-serif"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        android:visibility="visible"
        android:layout_marginTop="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <RadioButton
        android:text="Workout Type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:id="@+id/WorkoutTypeRadio"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true" />

    <RadioButton
        android:text="Zip Code"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ZipRadio"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/WorkoutTypeRadio"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textColor="#ffffff"
        android:ems="10"
        android:id="@+id/ZipInput"
        android:hint="Location/Zip Code"
        android:visibility="invisible"
        android:layout_alignBottom="@+id/workoutDropdownBtn"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:text="Fitness Type"
        android:layout_width="match_parent"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        android:layout_height="wrap_content"
        android:id="@+id/workoutDropdownBtn"
        android:visibility="invisible"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/ZipRadio"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/header"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="placeholder"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/placeholder" />


</RelativeLayout>
