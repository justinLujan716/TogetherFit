<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_trainer_registration"
    android:background="@drawable/backgroundsec"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.heem.togetherfit.TrainerRegistration">

    <TextView
        android:text="Trainer Registration ..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/welcomeStudent"
        android:layout_marginTop="14dp"
        android:textColor="#AFD3DF"
        tools:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="22dp"/>

    <TextView
        android:text="Email/User Name:"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:id="@+id/userEmailTrainerReg"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_below="@+id/welcomeStudent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Password:"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/UserPassReg"
        android:textSize="18dp"
        android:layout_below="@+id/userEmailTrainer2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <requestFocus />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/userEmailTrainerReg"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:textColor="#ffffff"
        android:textColorHint="#C9C9CA"
        android:ems="10"
        android:id="@+id/userEmailTrainer2"
        android:backgroundTint="#AFD3DF"
        android:hint="Email"
        android:layout_below="@+id/userEmailTrainerReg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:textColor="#ffffff"
        android:textColorHint="#C9C9CA"
        android:ems="10"
        android:id="@+id/userPassTrainer2"
        android:backgroundTint="#AFD3DF"
        android:hint="Password"
        android:layout_below="@+id/UserPassReg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp" />

    <Button
        android:text="Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:id="@+id/sign_up_button"
        android:layout_below="@+id/userPassTrainer2"
        android:layout_alignRight="@+id/userPassTrainer2"
        android:layout_alignEnd="@+id/userPassTrainer2"
        android:background="#AFD3DF"/>

</RelativeLayout>
