<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    android:background="@drawable/backgroundsec">

    <TextView
        android:text="Week Date:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:textStyle="bold"
        android:id="@+id/textView3"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/creatClassContent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Class Name:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:textStyle="bold"
        android:id="@+id/textView"
        android:layout_weight="0.06"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/editTextFromTime"
        android:layout_toLeftOf="@+id/editTextFromTime" />

    <TextView
        android:text="Time(From):"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:textStyle="bold"
        android:id="@+id/textView4"
        android:layout_alignBaseline="@+id/editTextFromTime"
        android:layout_alignBottom="@+id/editTextFromTime"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text|textEmailAddress|time"
        android:textColor="#ffffff"
        android:textColorHint="#C9C9CA"
        android:ems="10"
        android:id="@+id/editTextFromTime"
        android:backgroundTint="#AFD3DF"
        android:hint="e.g. 1:00 PM"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/editTextDate"
        android:layout_alignLeft="@+id/editTextDate"
        android:layout_alignStart="@+id/editTextDate" />

    <TextView
        android:text="Time(to):"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:textStyle="bold"
        android:id="@+id/textView6"
        android:layout_below="@+id/editTextFromTime"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress|time"
        android:textColor="#ffffff"
        android:textColorHint="#C9C9CA"
        android:ems="10"
        android:id="@+id/editTextToTime"
        android:backgroundTint="#AFD3DF"
        android:hint="e.g. 3:00 PM"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignLeft="@+id/editTextFromTime"
        android:layout_alignStart="@+id/editTextFromTime" />

    <TextView
        android:text="Price/hour:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:textStyle="bold"
        android:id="@+id/textView5"
        android:layout_below="@+id/editTextToTime"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress|number"
        android:textColor="#ffffff"
        android:textColorHint="#C9C9CA"
        android:ems="10"
        android:id="@+id/editTextDes"
        android:backgroundTint="#AFD3DF"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignLeft="@+id/editTextToTime"
        android:layout_alignStart="@+id/editTextToTime"
        android:hint="e.g. 10" />

    <TextView
        android:text="Total number of students"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:textStyle="bold"
        android:id="@+id/textView7"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/editTextDes"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/editTextDes"
        android:layout_toStartOf="@+id/editTextDes" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:textColor="#ffffff"
        android:textColorHint="#C9C9CA"
        android:ems="10"
        android:id="@+id/editText5"
        android:backgroundTint="#AFD3DF"
        android:hint="integer only"
        android:layout_alignTop="@+id/textView7"
        android:layout_toRightOf="@+id/textView7"
        android:layout_toEndOf="@+id/textView7" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress|numberSigned"
        android:textColor="#ffffff"
        android:textColorHint="#C9C9CA"
        android:ems="10"
        android:id="@+id/editText6"
        android:backgroundTint="#AFD3DF"
        android:hint="integer only"
        android:layout_alignTop="@+id/textView7"
        android:layout_toRightOf="@+id/textView7"
        android:layout_toEndOf="@+id/textView7" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#ffffff"
        android:textColor="#ffffff"
        android:textColorHint="#C9C9CA"
        android:id="@+id/creatClassContent"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:layout_alignRight="@+id/editTextDate"
        android:layout_alignEnd="@+id/editTextDate"
        android:inputType="text"
        android:hint="e.g. Muscle" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress|datetime"
        android:textColor="#ffffff"
        android:textColorHint="#C9C9CA"
        android:ems="10"
        android:id="@+id/editTextDate"
        android:backgroundTint="#AFD3DF"
        android:hint="e.g. Sunday"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4" />

    <TextView
        android:text="Creat Train Class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textColor="#AFD3DF"
        tools:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textSize="22dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Add to list"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:textStyle="bold"
        android:background="#AFD3DF"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="19dp" />

</RelativeLayout>