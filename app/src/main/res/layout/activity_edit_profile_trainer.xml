<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_find_trainer"
    android:background="@drawable/backgroundsec"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textColor="#ffffff"
            android:textColorHint="#C9C9CA"
            android:backgroundTint="#AFD3DF"
            android:hint="Enter New Name"
            android:ems="10"
            android:textSize="16dp"
            android:id="@+id/newname"
            android:layout_below="@+id/InfoView"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Enter New Age"
            android:textColor="#ffffff"
            android:textColorHint="#C9C9CA"
            android:backgroundTint="#AFD3DF"
            android:ems="10"
            android:textSize="16dp"
            android:id="@+id/newage"
            android:layout_below="@+id/InfoView"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textColorHint="#C9C9CA"
            android:backgroundTint="#AFD3DF"
            android:inputType="text"
            android:hint="Enter New Address"
            android:ems="10"
            android:textSize="16dp"
            android:id="@+id/newAddress"
            android:layout_below="@+id/newname"
            android:layout_alignLeft="@+id/newname"
            android:layout_alignStart="@+id/newname" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textColorHint="#C9C9CA"
            android:backgroundTint="#AFD3DF"
            android:inputType="text"
            android:hint="Enter New City"
            android:ems="10"
            android:textSize="16dp"
            android:id="@+id/newCity"
            android:layout_below="@+id/newname"
            android:layout_alignLeft="@+id/newname"
            android:layout_alignStart="@+id/newname" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textColorHint="#C9C9CA"
            android:backgroundTint="#AFD3DF"
            android:inputType="text"
            android:hint="Enter New State"
            android:ems="10"
            android:textSize="16dp"
            android:id="@+id/newState"
            android:layout_below="@+id/newname"
            android:layout_alignLeft="@+id/newname"
            android:layout_alignStart="@+id/newname" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textColorHint="#C9C9CA"
            android:backgroundTint="#AFD3DF"
            android:inputType="number"
            android:hint="Enter New ZipCode"
            android:ems="10"
            android:textSize="16dp"
            android:id="@+id/newZip"
            android:layout_below="@+id/newname"
            android:layout_alignLeft="@+id/newname"
            android:layout_alignStart="@+id/newname" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textColorHint="#C9C9CA"
            android:backgroundTint="#AFD3DF"
            android:inputType="text"
            android:hint="Enter New Organization"
            android:ems="10"
            android:textSize="16dp"
            android:id="@+id/newCertOrgan"
            android:layout_below="@+id/newname"
            android:layout_alignLeft="@+id/newname"
            android:layout_alignStart="@+id/newname" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textColorHint="#C9C9CA"
            android:backgroundTint="#AFD3DF"
            android:inputType="number"
            android:hint="Enter New Certification ID"
            android:ems="10"
            android:textSize="16dp"
            android:id="@+id/newCertId"
            android:layout_below="@+id/newname"
            android:layout_alignLeft="@+id/newname"
            android:layout_alignStart="@+id/newname" />

        <TextView
            android:text="New Fitness Type: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="#C9C9CA"
            android:backgroundTint="#AFD3DF"
            android:id="@+id/textView1"
            android:layout_below="@+id/newlocation"
            android:layout_alignLeft="@+id/newlocation"
            android:layout_alignStart="@+id/newlocation"
            android:layout_marginTop="10dp"
            android:layout_alignRight="@+id/newlocation"
            android:layout_alignEnd="@+id/newlocation" />

        <Spinner
            android:text="Fitness Type"
            android:layout_width="match_parent"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown"
            android:layout_height="wrap_content"
            android:id="@+id/workoutDropdownBtn"
            android:layout_below="@+id/textView1"
            android:layout_alignLeft="@+id/textView1"
            android:layout_alignStart="@+id/textView1"
            android:layout_alignRight="@+id/textView1"
            android:layout_alignEnd="@+id/textView1" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <Button
            android:text="Current Profile Information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#AFD3DF"
            android:id="@+id/show"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginBottom="10dp"
            android:layout_above="@+id/back"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:text="Back"
            android:layout_width="177dp"
            android:layout_height="wrap_content"
            android:background="#AFD3DF"
            android:id="@+id/back"
            android:layout_row="34"
            android:layout_column="0"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:text="Submit Changes"
            android:layout_width="170dp"
            android:background="#AFD3DF"
            android:layout_height="wrap_content"
            android:id="@+id/submit"
            android:layout_weight="1"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp" />

    </RelativeLayout>

</RelativeLayout>