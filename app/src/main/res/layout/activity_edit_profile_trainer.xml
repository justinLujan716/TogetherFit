<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_find_trainer"
    android:background="@drawable/backgroundsec"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:text="Your Profile"
            android:layout_width="match_parent"
            android:textSize="30dp"
            android:textColor="#C9C9CA"
            android:layout_height="wrap_content"
            android:backgroundTint="#AFD3DF"
            android:id="@+id/profile"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center" />

        <TextView
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:id="@+id/InfoView"
            android:backgroundTint="#AFD3DF"
            android:textSize="20dp"
            android:textColor="#C9C9CA"
            android:gravity="center"
            android:layout_below="@+id/profile"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textColor="#ffffff"
            android:textColorHint="#C9C9CA"
            android:backgroundTint="#AFD3DF"
            android:hint="Enter New Name"
            android:ems="10"
            android:textSize="20dp"
            android:id="@+id/newname"
            android:layout_below="@+id/InfoView"
            android:layout_centerHorizontal="true" />



        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Enter New Age"
            android:textColor="#ffffff"
            android:textColorHint="#C9C9CA"
            android:backgroundTint="#AFD3DF"
            android:ems="10"
            android:textSize="20dp"
            android:id="@+id/newage"
            android:layout_below="@+id/InfoView"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textColorHint="#C9C9CA"
            android:backgroundTint="#AFD3DF"
            android:inputType="number"
            android:hint="Enter New Location/Zip"
            android:ems="10"
            android:textSize="20dp"
            android:id="@+id/newlocation"
            android:layout_below="@+id/newname"
            android:layout_alignLeft="@+id/newname"
            android:layout_alignStart="@+id/newname" />

        <TextView
            android:text="New Fitness Type: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#C9C9CA"
            android:backgroundTint="#AFD3DF"
            android:id="@+id/textView1"
            android:layout_below="@+id/newlocation"
            android:layout_alignLeft="@+id/newlocation"
            android:layout_alignStart="@+id/newlocation"
            android:layout_marginTop="10dp"
            android:layout_alignRight="@+id/newlocation"
            android:layout_alignEnd="@+id/newlocation" />

        <Spinner
            android:text="Fitness Type"
            android:layout_width="match_parent"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown"
            android:layout_height="wrap_content"
            android:id="@+id/workoutDropdownBtn"
            android:layout_below="@+id/textView1"
            android:layout_alignLeft="@+id/textView1"
            android:layout_alignStart="@+id/textView1"
            android:layout_alignRight="@+id/textView1"
            android:layout_alignEnd="@+id/textView1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:gravity="bottom"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <Button
            android:text="Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#AFD3DF"
            android:id="@+id/back"
            android:layout_weight="1"
            android:layout_margin="5dp"
            />

        <Button
            android:text="Submit Changes"
            android:layout_width="wrap_content"
            android:background="#AFD3DF"
            android:layout_height="wrap_content"
            android:id="@+id/submit"
            android:layout_weight="1"
            android:layout_margin="5dp"/>

    </LinearLayout>
</RelativeLayout>