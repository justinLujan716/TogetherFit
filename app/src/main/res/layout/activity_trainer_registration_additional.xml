<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_trainer_registration_additional"
    android:background="@drawable/backgroundsec"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:text="We need to know you better"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/welcomeStudent"
        android:layout_marginTop="14dp"
        android:textColor="#AFD3DF"
        tools:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="22dp"/>

    <requestFocus />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#AFD3DF"
        android:textColorHint="#C9C9CA"
        android:id="@+id/Type_spinner"
        android:layout_alignTop="@+id/Fitness_Type"
        android:layout_toRightOf="@+id/Fitness_Type"
        android:layout_toEndOf="@+id/Fitness_Type"
        android:entries="@array/type" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:textColor="#ffffff"
        android:textColorHint="#C9C9CA"
        android:ems="10"
        android:id="@+id/Trainer_Name"
        android:backgroundTint="#AFD3DF"
        android:hint="Your name"
        android:layout_alignBaseline="@+id/Name"
        android:layout_alignBottom="@+id/Name"
        android:layout_alignLeft="@+id/Type_spinner"
        android:layout_alignStart="@+id/Type_spinner" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textColorHint="#C9C9CA"
        android:ems="10"
        android:id="@+id/Trainer_Age"
        android:backgroundTint="#AFD3DF"
        android:hint="Your Age"
        android:layout_alignBaseline="@+id/Age"
        android:layout_alignBottom="@+id/Age"
        android:layout_alignLeft="@+id/Trainer_Name"
        android:layout_alignStart="@+id/Trainer_Name"
        android:inputType="text" />

    <TextView
        android:text="Your Name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:textStyle="bold"
        android:id="@+id/Name"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/Type_spinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Your Age:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:textStyle="bold"
        android:id="@+id/Age"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/Trainer_Name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textColorHint="#C9C9CA"
        android:ems="10"
        android:id="@+id/Trainer_Zipcode"
        android:backgroundTint="#AFD3DF"
        android:hint="Zipcode"
        android:layout_alignBaseline="@+id/ZipeCode"
        android:layout_alignBottom="@+id/ZipeCode"
        android:layout_alignLeft="@+id/Trainer_Age"
        android:layout_alignStart="@+id/Trainer_Age"
        android:inputType="number" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:textColor="#ffffff"
        android:textColorHint="#C9C9CA"
        android:ems="10"
        android:id="@+id/OrganName"
        android:backgroundTint="#AFD3DF"
        android:hint="Organization name"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/Trainer_Zipcode"
        android:layout_alignStart="@+id/Trainer_Zipcode" />

    <TextView
        android:text="Certification ID:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:textStyle="bold"
        android:id="@+id/textView3"
        android:layout_below="@+id/OrganName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:textColor="#ffffff"
        android:textColorHint="#C9C9CA"
        android:ems="10"
        android:id="@+id/CerID"
        android:backgroundTint="#AFD3DF"
        android:hint="ID number"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/OrganName"
        android:layout_alignStart="@+id/OrganName" />

    <Button
        android:text="Submit"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/add_button_Trainer"
        android:textStyle="bold"
        android:background="#AFD3DF"
        android:layout_below="@+id/CerID"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Certification Type:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:textStyle="bold"
        android:id="@+id/textView2"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/Trainer_Zipcode"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:textColor="#ffffff"
        android:textColorHint="#C9C9CA"
        android:ems="10"
        android:id="@+id/editText2"
        android:backgroundTint="#AFD3DF"
        android:hint="Your State"
        android:layout_alignTop="@+id/textView12"
        android:layout_alignLeft="@+id/Trainer_Zipcode"
        android:layout_alignStart="@+id/Trainer_Zipcode" />

    <TextView
        android:text="Zip Code:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:textStyle="bold"
        android:id="@+id/ZipeCode"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/editText2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Address:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:textStyle="bold"
        android:id="@+id/textView14"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/Trainer_Age"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:textColor="#ffffff"
        android:textColorHint="#C9C9CA"
        android:ems="10"
        android:id="@+id/editText4"
        android:backgroundTint="#AFD3DF"
        android:hint="Your City"
        android:layout_below="@+id/editText3"
        android:layout_alignLeft="@+id/editText3"
        android:layout_alignStart="@+id/editText3" />

    <TextView
        android:text="State:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:textStyle="bold"
        android:id="@+id/textView12"
        android:layout_below="@+id/editText4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp" />

    <TextView
        android:text="City:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:textStyle="bold"
        android:id="@+id/textView15"
        android:layout_alignBaseline="@+id/editText4"
        android:layout_alignBottom="@+id/editText4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:textColor="#ffffff"
        android:textColorHint="#C9C9CA"
        android:ems="10"
        android:id="@+id/editText3"
        android:backgroundTint="#AFD3DF"
        android:hint="Your Address"
        android:layout_alignBaseline="@+id/textView14"
        android:layout_alignBottom="@+id/textView14"
        android:layout_alignLeft="@+id/Trainer_Age"
        android:layout_alignStart="@+id/Trainer_Age" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:id="@+id/imageView"
        android:layout_below="@+id/welcomeStudent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <Button
        android:text="Upload Picture"
        android:layout_width="350dp"
        android:layout_height="25dp"
        android:id="@+id/button5"
        android:textStyle="bold"
        android:background="#AFD3DF"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView" />

    <TextView
        android:text="Fitness Type:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:textStyle="bold"
        android:id="@+id/Fitness_Type"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/button5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
</ScrollView>